# Quantum Pi Forge Environment Configuration
# Copy this file to .env.local and fill in the values

# =============================================================================
# BLOCKCHAIN CONFIGURATION (Required for core functionality)
# =============================================================================

# Polygon RPC URL for gasless transactions
POLYGON_RPC_URL=https://polygon-rpc.com

# 0G Aristotle RPC URL
ZERO_G_RPC_URL=https://evmrpc.0g.ai

# OINIO Token Contract Address
OINIO_TOKEN_ADDRESS=0x07f43E5B1A8a0928B364E40d5885f81A543B05C7

# Sponsor wallet private key (for gasless transactions)
# WARNING: Never commit this value to version control
SPONSOR_PRIVATE_KEY=your_private_key_here

# =============================================================================
# AGENT SERVICE URLS (Optional - enables agent ecosystem features)
# =============================================================================

# FastAPI Quantum Conduit Service
# Development: http://localhost:8000
# Production: https://your-fastapi-service.onrender.com
FASTAPI_URL=http://localhost:8000

# Flask Glyph Weaver Service
# Development: http://localhost:5000
# Production: https://your-flask-service.railway.app
FLASK_URL=http://localhost:5000

# Gradio Truth Mirror Service
# Development: http://localhost:7860
# Production: https://your-gradio-service.huggingface.space
GRADIO_URL=http://localhost:7860

# =============================================================================
# AGENT SERVICE CONFIGURATION (Optional)
# =============================================================================

# Health check timeout in milliseconds
# Recommended: 5000 (5 seconds) for development, 10000 (10 seconds) for production
HEALTH_CHECK_TIMEOUT=5000

# Agent health cache TTL in seconds
# How long to cache agent health status before refreshing
AGENT_HEALTH_CACHE_TTL=30

# Enable/disable agent services integration
# Set to "false" to disable agent service features
ENABLE_AGENT_SERVICES=true

# Show agent status widget in dashboard
# Set to "false" to hide the widget
ENABLE_AGENT_STATUS_WIDGET=true

# =============================================================================
# GITHUB OAUTH (Optional - for GitHub authentication)
# =============================================================================

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# NEXTAUTH (Optional - for authentication)
# =============================================================================

# Base URL for the application
NEXTAUTH_URL=http://localhost:3000

# Secret for NextAuth.js (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# PI NETWORK (Optional - for Pi Network integration)
# =============================================================================

PI_API_KEY=your_pi_api_key_here

# =============================================================================
# BACKEND API (Optional - for additional backend services)
# =============================================================================

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=https://your-backend.railway.app

# Blockchain Chain ID (public)
NEXT_PUBLIC_CHAIN_ID=137

# =============================================================================
# DEPLOYMENT CONFIGURATION (For Hardhat deployments)
# =============================================================================

# Private key for deploying smart contracts
# WARNING: Never commit this value to version control
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# Deployer wallet address
DEPLOYER_ADDRESS=your_deployer_address_here

# =============================================================================
# MONITORING & NOTIFICATIONS (Optional - for production monitoring)
# =============================================================================

# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# =============================================================================
# DEVELOPMENT FLAGS (Optional)
# =============================================================================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Agent Services are OPTIONAL - the dApp will work without them
# 2. Core blockchain features require POLYGON_RPC_URL, OINIO_TOKEN_ADDRESS, and SPONSOR_PRIVATE_KEY
# 3. Never commit private keys or secrets to version control
# 4. Use different values for development, staging, and production environments
# 5. For Vercel deployment, set these in the Vercel dashboard under "Environment Variables"
