# Railway Backend API Environment Variables
# Set these in Railway dashboard: Settings > Variables
# NEVER commit actual secrets to version control

# ====================================
# NODE ENVIRONMENT
# ====================================
NODE_ENV=production
PORT=3001
API_VERSION=v1

# ====================================
# CORS & SECURITY
# ====================================
CORS_ORIGIN=https://quantumpiforge.com,https://www.quantumpiforge.com
ALLOWED_HOSTS=quantumpiforge.com,api.quantumpiforge.com

# ====================================
# BLOCKCHAIN CONFIGURATION
# ====================================
# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# OINIO Token Contract
OINIO_TOKEN_ADDRESS=0x07f43E5B1A8a0928B364E40d5885f81A543B05C7

# Sponsor Wallet for Gasless Transactions
# ⚠️ CRITICAL: Set this in Railway dashboard, NEVER commit to repo
SPONSOR_PRIVATE_KEY=

# ====================================
# API RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# ====================================
# DATABASE (Optional - if using PostgreSQL)
# ====================================
# Railway will provide this automatically if you add PostgreSQL service
DATABASE_URL=

# ====================================
# AI SERVICES (Optional)
# ====================================
OPENAI_API_KEY=
AI_GATEWAY_URL=https://ai-gateway.vercel.sh/v1

# ====================================
# MONITORING & LOGGING
# ====================================
# Sentry for error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
LOG_FORMAT=json

# ====================================
# WEBHOOK NOTIFICATIONS
# ====================================
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# ====================================
# HEALTH CHECK CONFIGURATION
# ====================================
HEALTH_CHECK_PATH=/api/health
HEALTH_CHECK_TIMEOUT=5000

# ====================================
# TRANSACTION LIMITS
# ====================================
MIN_STAKE_AMOUNT=0.01
MAX_STAKE_AMOUNT=10000
GAS_SPONSOR_BALANCE_THRESHOLD=1  # Minimum MATIC balance

# ====================================
# MAINTENANCE MODE
# ====================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System maintenance in progress. Please try again later.
