# Quantum Pi Forge Backend Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Key (optional - for protected endpoints)
API_KEY=

# Polygon Network Configuration
POLYGON_RPC_URL=https://polygon-rpc.com
# Alternative RPCs:
# POLYGON_RPC_URL=https://rpc-mainnet.maticvigil.com
# POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# Contract Addresses
OINIO_TOKEN_ADDRESS=0x07f43E5B1A8a0928B364E40d5885f81A543B05C7

# Sponsor Wallet (NEVER commit this with actual value!)
# This wallet pays gas fees for gasless transactions
SPONSOR_PRIVATE_KEY=

# Optional: Logging
LOG_LEVEL=info

# Optional: External Services
# INFURA_API_KEY=
# ALCHEMY_API_KEY=
