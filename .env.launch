# ===================================
# OINIO LAUNCH CONFIGURATION
# ===================================

# 1. GRANT MONITORING
# Monitor 0G Guild for grant approval status
GUILD_API_KEY=your_guild_api_key_here
ZERO_G_GRANT_ID=your_grant_id_here
GRANT_CHECK_INTERVAL=3600  # Check every hour (3600 seconds)

# 2. DEPLOYMENT CONFIGURATION
# Deployer wallet for flash launch
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here
DEPLOYER_ADDRESS=your_deployer_address_here

# 3. DEX ROUTER CONFIGURATION
# Update these based on 0G Aristotle network DEX router
# Visit: https://docs.0g.ai for current router address
DEX_ROUTER_ADDRESS=0x...  # 0G Aristotle DEX Router (e.g., Uniswap V2 compatible)
DEX_FACTORY_ADDRESS=0x...  # DEX Factory for pair creation
WGAS_ADDRESS=0x...  # Wrapped GAS token on 0G Aristotle

# 4. OINIO TOKEN CONFIGURATION
# After token deployment on 0G Aristotle
OINIO_TOKEN_ADDRESS=0x...  # OINIO token contract address
OINIO_DECIMALS=18
OINIO_INITIAL_SUPPLY=1000000000  # Total supply in base units

# 5. BLOCKCHAIN CONFIGURATION
# 0G Aristotle Mainnet
ZERO_G_RPC_URL=https://rpc.0g.ai
ZERO_G_CHAIN_ID=16600
ZERO_G_CHAIN_NAME="0G_Aristotle"
ZERO_G_EXPLORER_URL=https://explorer.0g.ai

# Fallback RPC
BACKUP_RPC_URL=https://rpc-backup.0g.ai

# 6. LIQUIDITY POOL CONFIGURATION
# Initial liquidity pair: OINIO / GAS
INITIAL_LIQUIDITY_OINIO=100000000  # Amount of OINIO
INITIAL_LIQUIDITY_GAS=50  # Amount of GAS

# 7. LAUNCH PARAMETERS
# Safe launch thresholds
MIN_LIQUIDITY_LOCK_HOURS=24
MAX_PRICE_IMPACT_PERCENT=5  # Reject swaps with >5% price impact
SLIPPAGE_TOLERANCE_PERCENT=1

# 8. MONITORING & ALERTING
# Discord webhook for launch notifications
DISCORD_WEBHOOK_URL=your_discord_webhook_url
DISCORD_ALERTS_ENABLED=true

# Twitter API for announcements (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_TOKEN_SECRET=your_twitter_token_secret

# 9. LOGGING & DIAGNOSTICS
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE=./logs/launch.log
ENABLE_TRACE=true

# 10. EMERGENCY CONTROLS
# Pause/resume operations
LAUNCH_PAUSED=false
EMERGENCY_DRAIN_ADDRESS=your_emergency_address_here
CIRCUIT_BREAKER_ENABLED=true

# ===================================
# NEXT STEPS:
# ===================================
# 1. Get GUILD_API_KEY from: https://guild.0g.ai/api/keys
# 2. Get 0G RPC endpoints from: https://docs.0g.ai
# 3. Get DEX router address from 0G documentation
# 4. Create Discord webhook: https://discord.com/developers/applications
# 5. Configure deployer wallet with sufficient GAS tokens
# 6. Run: source .env.launch && bash scripts/monitor-grant.sh
